{
    "name": "openpsa/globposer",
    "description": "Install CLI executables from Composer packages globally",
    "keywords": ["composer", "console"],
    "license": "LGPL",
    "authors": [
        {
            "name": "Andreas Flack",
            "email": "flack@contentcontrol-berlin.de",
            "homepage": "http://www.contentcontrol-berlin.de/"
        }
    ],
    "require": {
        "composer/composer": "~1.0.0-alpha9"
    },
    "bin": ["bin/globposer"],
    "scripts": {
        "post-install-cmd": [
            "openpsa\\globposer\\installer::setup"
        ],
        "post-update-cmd": [
            "openpsa\\globposer\\installer::setup"
        ]
    },
    "autoload": {
	    "psr-4": { "openpsa\\globposer\\": "src/" }
    }
}
